<header id="header">
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo">
          <img class="author-avatar"/>
          <div class="text"><%= config.title %></div>
        </a>
      </h1>
      <% if (theme.subtitle){ %>
        <div id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </div>
      <% } %>
    </div>
  </div>
</header>