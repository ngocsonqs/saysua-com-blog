#header
  height: banner-height
  position: relative
  @media mq-mobile
    height: 160px


#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url(banner-url) center #000
  background-size: cover
  z-index: -1

#header-title
  height: logo-size
  position: absolute
  top: 40px
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #000
  font-weight: 300

#logo-wrap
  text-align: left
  @media mq-mobile
    text-align: center
  .text
    margin-top: -86px;
    margin-left: 125px;
    font-weight: bold;
    @media mq-mobile
      margin-top: 0;
      margin-left: 0;

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

.author-avatar
  background: url(logo-url) no-repeat
  height: 110px;
  width: 110px;
  border-radius: 50%;
  background-size: 110px;
  @media mq-mobile
    float: none;
    height: 80px;
    width: 80px;
    background-size: 80px;

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-line-height
  letter-spacing: 1px

#subtitle-wrap
  margin-top: 6px
  margin-left: 125px;
  @media mq-mobile
    margin: 0
    text-align: center;

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777