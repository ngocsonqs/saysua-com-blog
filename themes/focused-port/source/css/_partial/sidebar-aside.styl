#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  text-shadow: 0 1px #fff
  border-radius: 3px
  a
    color: color-default
    text-decoration: none
    &:hover
      text-decoration: underline

  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc